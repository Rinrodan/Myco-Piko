---
import Layout from '../../layouts/Page.astro';
import ProjectCard from '../../components/cards/ProjectCard.astro';

const seo = {
	title: 'Projects | Myco',
	description: 'Some of Our Projects',
};

const projOneIMG = 'https://images.pexels.com/photos/379960/pexels-photo-379960.jpeg';
const projOneTitle = 'Project one Title'
const projOneLink = '/company/contact'

const projTwoIMG = 'https://images.pexels.com/photos/17346602/pexels-photo-17346602/free-photo-of-worker-climbing-steel-ladder.jpeg'
const projTwoTitle = 'Project Two Title';
const projTwoLink = '/company/contact'

const projThreeIMG = 'https://images.pexels.com/photos/17745340/pexels-photo-17745340/free-photo-of-construction-workers-standing-on-the-scaffolding-outside-of-a-building-in-city.jpeg'
const projThreeTitle = 'Project Three Title';
const projThreeLink = '/company/contact'

---

<Layout {seo}>
  <div id="project-cards-container">
    <ProjectCard image={projOneIMG} title={projOneTitle} canonicalURL={projOneLink}></ProjectCard>
    <ProjectCard image={projTwoIMG} title={projTwoTitle} canonicalURL={projTwoLink}></ProjectCard>
    <ProjectCard image={projThreeIMG} title={projThreeTitle} canonicalURL={projThreeLink}></ProjectCard>
  </div>
</Layout>


<style>
  #project-cards-container {
      display: flex;
      flex-direction: row;
      width: 100%;
      min-width: 450px;
      gap: 2rem;
      padding: 2rem 0px;
      height: max-content;
      flex-wrap: wrap;

  }
  @media (width >= 800px) {
    #project-cards-container {
      gap: 1.5rem;
      padding: 2rem 0px;
    }
  }
  @media (width <= 800px) {
    .project-card{
      min-width: 430px;
    }
    #project-cards-container {
      gap: 1.5rem;
      height: 50%;
      padding: 2rem 0px;
    }
  }
  @media (width <= 450px) {
    #project-cards-container {
      padding: 2rem 0.3rem;
    }
  }
  </style>