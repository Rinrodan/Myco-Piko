---

import { Button } from "@components/odyssey-theme";
const {	title, description,	canonicalURL, image} = Astro.props;

---

<div class="project-card">

    <div class="project-card-image-container">
        <img src={image} />
    </div>
    <div class="project-card-text">
        <span>{title}</span>
    </div>
    <div class="project-card-footer">
        <a href={canonicalURL}><Button>Learn More</Button></a>
    </div>

</div> 

<style>
    .project-card {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 30%;
        height: 100%;
        max-height: 800px;
        min-width: 280px;
        padding: 1rem;
        margin: 0px auto;
        background-color: var(--theme-surface-1);
        color: var(--theme-on-surface-1);
        border-radius: 2rem;
        transition-duration: 300ms;
    }

    .project-card-image-container {
        display: flex;
        width: 100%;
        height: 70%;
        min-height: 320px;
        overflow: hidden;
        border: 0px solid transparent;
        border-radius: 1rem;
        & img {
            position: relative;
            top: 0;
            width: 100%;
            /* translate: 0px -30%; */

            object-fit: cover;
        }
    }
    .project-card-text {
        display: flex;
        padding: 1rem 0px;
        font-size: 2vh;
        font-weight: 700;
        text-wrap: wrap
        line-height: 2rem;
        height: max-content;;
        min-height: 5rem;

    }
    .project-card-footer {
        width: 100%;
        height: max-content;
        & a {
            display: flex;
            height: max-content;
            width: max-content;
            margin: 0px auto;
            text-decoration: none;
        }
    }
    @media (width <= 1000px)  {
        .project-card {
            border-radius: 2rem;
            width: 45%;
        }
    .project-card-image-container {
        width: 100%;
        height: 500px;
            }
            .project-card-text {
                padding: 0px;
            }
    
  }

    @media (width <= 800px)  {
    .project-card {
        border-radius: 2rem;
        gap: 5%;
        & .project-card-image-container {
            height: max-content;
            min-height: 300px;

        }
    }
    }
    @media (width <= 600px)  {
        .project-card {
            width: 75%;
            height: auto;
            & .project-card-text {
                font-size: 2rem;
            }
        }
    }
    @media (width <= 450px) {
    .project-card {
        width: 100%%;
        height: max-content;;

        & .project-card-image-container {
            height: 50%;
            min-height: 300px;

        }
        .project-card-text {
            padding: 0px;
        }
    }
  }
  </style>